<?xml version="1.0"?>
<robot name="industrial_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Materials -->
  <material name="industrial_white">
    <color rgba="0.9 0.9 0.9 1.0"/>
  </material>
  <material name="dark_gray">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="brand_orange">
    <color rgba="1.0 0.4 0.0 1.0"/>
  </material>

  <link name="base_link">
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.04"/>
      </geometry>
      <material name="dark_gray"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.15" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <!-- Axis 1: Base Rotation -->
  <joint name="j1" type="revolute">
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="link_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

  <link name="link_1">
    <inertial>
      <mass value="4.0"/>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.12" length="0.15"/>
      </geometry>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <material name="industrial_white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.08" length="0.18"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="1.5707 0 0"/>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- Axis 2: Shoulder -->
  <joint name="j2" type="revolute">
    <origin xyz="0 0.03 0.15" rpy="0 0 0"/>
    <parent link="link_1"/>
    <child link="link_2"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5707" upper="1.5707" effort="100" velocity="1.0"/>
  </joint>

  <link name="link_2">
    <inertial>
      <mass value="3.0"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.08 0.12 0.6"/>
      </geometry>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <material name="industrial_white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.06" length="0.14"/>
      </geometry>
      <origin xyz="0 0 0.6" rpy="1.5707 0 0"/>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- Axis 3: Elbow -->
  <joint name="j3" type="revolute">
    <origin xyz="0 0 0.6" rpy="0 0 0"/>
    <parent link="link_2"/>
    <child link="link_3"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5707" upper="1.5707" effort="100" velocity="1.0"/>
  </joint>

  <link name="link_3">
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0.15 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.07 0.1 0.15"/>
      </geometry>
      <origin xyz="0.05 0 0" rpy="0 1.5707 0"/>
      <material name="industrial_white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.25"/>
      </geometry>
      <origin xyz="0.25 0 0" rpy="0 1.5707 0"/>
      <material name="industrial_white"/>
    </visual>
  </link>

  <!-- Axis 4: Wrist Roll -->
  <joint name="j4" type="revolute">
    <origin xyz="0.375 0 0" rpy="0 0 0"/>
    <parent link="link_3"/>
    <child link="link_4"/>
    <axis xyz="1 0 0"/>
    <limit lower="-6.28" upper="6.28" effort="50" velocity="1.5"/>
  </joint>

  <link name="link_4">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0.1 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.2"/>
      </geometry>
      <origin xyz="0.1 0 0" rpy="0 1.5707 0"/>
      <material name="dark_gray"/>
    </visual>
  </link>

  <!-- Axis 5: Wrist Pitch -->
  <joint name="j5" type="revolute">
    <origin xyz="0.18 0 0" rpy="0 0 0"/>
    <parent link="link_4"/>
    <child link="link_5"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5707" upper="1.5707" effort="50" velocity="1.5"/>
  </joint>

  <link name="link_5">
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <sphere radius="0.045"/>
      </geometry>
      <material name="industrial_white"/>
    </visual>
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.06"/>
      </geometry>
      <origin xyz="0.03 0 0" rpy="0 1.5707 0"/>
      <material name="industrial_white"/>
    </visual>
  </link>

  <!-- Axis 6: Wrist Roll -->
  <joint name="j6" type="revolute">
    <origin xyz="0.05 0 0" rpy="0 0 0"/>
    <parent link="link_5"/>
    <child link="link_6"/>
    <axis xyz="1 0 0"/>
    <limit lower="-6.28" upper="6.28" effort="50" velocity="2.0"/>
  </joint>

  <link name="link_6">
    <inertial>
      <mass value="0.2"/>
      <origin xyz="0.01 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.015"/>
      </geometry>
      <origin xyz="0.0075 0 0" rpy="0 1.5707 0"/>
      <material name="dark_gray"/>
    </visual>
    <visual>
      <geometry>
        <box size="0.03 0.005 0.005"/>
      </geometry>
      <origin xyz="0.02 0 0" rpy="0 0 0"/>
      <material name="brand_orange"/>
    </visual>
  </link>

</robot>